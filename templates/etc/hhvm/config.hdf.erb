<% if scope.lookupvar('hhvm::config_hdf_env_append') -%>
	<% if !scope.lookupvar('hhvm::config_hdf_env_append').empty? -%>
EnvVariables {
		<% scope.lookupvar('hhvm::config_hdf_env_append').sort_by {|k,v| k}.each do |key, val| -%>
	<%= key %> = <%= val %>
		<% end -%>
}
	<% end -%>
<% end -%>

<% if scope.lookupvar('hhvm::config_hdf_dyn_ext_append') and !scope.lookupvar('hhvm::config_hdf_dyn_ext_append').empty? -%>
DynamicExtensions {
	<% scope.lookupvar('hhvm::config_hdf_dyn_ext_append').sort_by {|k,v| k}.each do |key, val| -%>
	<%= key %> = <%= val %>
	<% end -%>
}
<% end -%>
